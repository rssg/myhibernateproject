<?xml version="1.0"?>
<project name="Hibernate Standalone"
         basedir=".">
         <property name="srcDir" value="src/hibernate/standalone"/>
         <property name="binDir" value="classes"/>
         <property name="libDir" value="lib"/>
  <path id="lib.path.ref">
    <fileset dir="lib" includes="*.jar"/>
  </path>

         <target name="compile" depends="clean, prepare">
         	<javac srcdir="${srcDir}" 
         		destdir="${binDir}"
         		classpath="${toString:lib.path.ref}"
         	/>
         </target>
         <target name="clean">
         	<delete dir="${binDir}/hibernate"/>
         </target>
         <target name="prepare">
         	<mkdir dir="${binDir}/hibernate"/>
         	<copy file="${srcDir}/applicationContext.xml" toDir="${binDir}/hibernate/standalone"/>
         </target>
	
         <target name="run" depends="clean, prepare, compile">
         	<java classname="hibernate.standalone.test">
         		<classpath>
         			<pathelement path="${toString:lib.path.ref}"/>
         			<pathelement path="${binDir}/"/>
         		</classpath>
         	</java>
         </target>
</project>
